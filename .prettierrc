{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "printWidth": 120,
    "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
    "importOrder": ["<THIRD_PARTY_MODULES>", "^@/components/(.*)$", "^@/lib/(.*)$", "^@/app/(.*)$", "^./(.*)$"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
